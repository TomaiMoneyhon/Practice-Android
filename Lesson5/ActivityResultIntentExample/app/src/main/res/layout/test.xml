<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/tester_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1+3=?"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgq1">
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/rb1q1"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/rb2q1"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="22"
            android:id="@+id/rb3q1"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5+2=?"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgq2">
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/rb1q2"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="25"
            android:id="@+id/rb2q2"/>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/rb3q2"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="Submit"
        android:id="@+id/submit_test"/>
</LinearLayout>