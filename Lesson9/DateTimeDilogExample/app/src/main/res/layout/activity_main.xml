<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick date"
        android:id="@+id/date_picker_btn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick time"
        android:id="@+id/time_picker_btn"
        android:layout_below="@id/date_picker_btn"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_date"
        android:layout_toRightOf="@id/date_picker_btn"
        android:textSize="20sp"
        android:layout_alignBaseline="@id/date_picker_btn"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_time"
        android:layout_toRightOf="@id/time_picker_btn"
        android:textSize="20sp"
        android:layout_alignBaseline="@id/time_picker_btn"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>
